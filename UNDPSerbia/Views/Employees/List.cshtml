@model UNDPSerbia.ViewModels.EmployeesListViewModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees List</h2>
<p>
    @Html.ActionLink("New Employee", "New", "Employees", null, new { @class = "btn btn-primary" })
</p>
<table id="employees" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Date of Birth</th>
            <th>Title</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>       
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#employees").DataTable({
                ajax: {
                    url: "/api/employees/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id"
                    },
                    {
                        data: "lastName",
                        render: function (data, type, employee) {
                            return "<a href='/employees/edit/" + employee.id + "'>" + employee.lastName + "</a>";
                        }
                    },
                    {
                        data: "firstName",
                        render: function (data, type, employee) {
                            return "<a href='/employees/edit/" + employee.id + "'>" + employee.firstName + "</a>";
                        }
                    },
                    {
                        data: "dateOfBirth",
                        render: function (data, type, row) {
                            if (data === null) 
                                return data;
                            
                            else {
                                var dateSplit = data.split('T');

                                var temp = dateSplit[0];

                                var dateSplit2 = temp.split('-');

                                return type === "display" || type === "filter" ?
                                    dateSplit2[2] + '/' + dateSplit2[1] + '/' + dateSplit2[0] :
                                    data;
                            }
                                
                        }
                    },
                    {
                        data: "title"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class ='btn-link js-delete' data-employee-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#employees").on("click",".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this employee?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/employees/" + button.attr("data-employee-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}

